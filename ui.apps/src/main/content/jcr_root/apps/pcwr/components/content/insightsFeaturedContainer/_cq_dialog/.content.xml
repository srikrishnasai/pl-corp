<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Insights Featured Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <headline
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Headline"
                        name="./headline"/>
                    <enableTagCloud
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        name="./enableTagCloud"
                        text="Display Tag Cloud ?"
                        value="true"/>                        
                    <insightsCard1Path
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Insights Articles Page Path"
                        fieldLabel="First Insights Article Page  Path"
                        name="./insightsCard1Path"
                        required="{Boolean}true"
                        rootPath="/content/pl-corp"/>
                    <insightsCard2Path
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Insights Articles Page Path"
                        fieldLabel="Second Insights Article Page  Path"
                        name="./insightsCard2Path"
                        required="{Boolean}true"
                        rootPath="/content/pl-corp"/>
                    <insightsCard3Path
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="Insights Articles Page Path"
                        fieldLabel="Third Insights Article Page  Path"
                        name="./insightsCard3Path"
                        required="{Boolean}true"
                        rootPath="/content/pl-corp"/>
                    <seeAllInsightsLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Default value is 'See All Insights'."
                        fieldLabel="See All Insights Label"
                        name="./seeAllInsightsLabel"/>
                    <seeAllTarget
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldDescription="Provide a target page for 'See All Insights'."
                        fieldLabel="See All Insights Target"
                        name="./seeAllTarget"
                        rootPath="/content/pl-corp"/>
                    <disableAnimations
	                    jcr:primaryType="nt:unstructured"
	                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
	                    name="./disableAnimations"
	                    text="Disable Animations"
                        fieldDescription="Disables the animations for insights featured component, when checked"          
	                    value="true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
