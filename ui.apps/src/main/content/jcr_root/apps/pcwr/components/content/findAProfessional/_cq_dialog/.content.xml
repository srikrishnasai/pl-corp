<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Find a Professional"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <heading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Heading"
                        name="./heading"
                        required="{Boolean}true"/>
                    <subHeading
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Subheading"
                        name="./subHeading"/>
                	 <description
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
						path="pcwr/components/common/commonRTE/cq:dialog/content/items/column/items/richText"/>
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="pcwr/cq/gui/components/authoring/dialog/fileupload"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldLabel="Image"
                        fileNameParameter="./imageFileName"
                        fileReferenceParameter="./imagePath"
                        mimeTypes="[image/jpeg,image/png]"
                        multiple="{Boolean}false"
                        name="./imageFile"
                        title="Upload Image Asset"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"
                        allowUpload="{Boolean}false"/>                        
                    <imagePos
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Image Position"
                        name="./imagePos">
                        <items jcr:primaryType="nt:unstructured">
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="left"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="right"/>
                        </items>
                    </imagePos>
                    <inputFieldText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Placeholder Text"
                        fieldDescription="For example, 'Enter Zip Code'"
                        name="./inputFieldText"/>   
                    <invalidZipError
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Invalid Zip Code Error Message"
                        fieldDescription="Defaults to 'Please provide valid Zip code'"
                        name="./invalidZipError"/>   
					<action
				    	jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Action"
                        name="./action"/>                                        
					<target
				    	jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldLabel="Target"
                        name="./target"
                        rootPath="/content/pl-corp"/>                                        
                </items>
            </column>
        </items>
    </content>
</jcr:root>
