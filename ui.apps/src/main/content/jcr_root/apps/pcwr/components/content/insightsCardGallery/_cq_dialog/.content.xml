<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" 
	jcr:primaryType="nt:unstructured"
	jcr:title="Insights Card Gallery" 
	sling:resourceType="cq/gui/components/authoring/dialog">

	<content 
		jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
		<items jcr:primaryType="nt:unstructured">
			<column 
				jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/coral/foundation/container">
				<items jcr:primaryType="nt:unstructured">
					<headline 
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
						fieldLabel="Headline" 
						name="./headline" 
						required="{Boolean}true"/>
					<path 
						jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
						fieldDescription="Path to where the Insights Articles are maintained"
						fieldLabel="Path" 
						name="./path" 
						required="{Boolean}true" 
						rootPath="/content/pl-corp"
						value="/content/pl-corp/insights-articles" />

                    <color
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Background Color"
                        name="./colorClass">
                        <items jcr:primaryType="nt:unstructured">
                            <grey
                                jcr:primaryType="nt:unstructured"
                                text="Grey"
                                value="bg-grey"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="bg-white"/>
                        </items>
                    </color>
                                       
                    <number
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Initial number of rows"
                        fieldDescription="Refresh the page to see the selected number of rows displayed"    
                        name="./rowNumber">
                        <items jcr:primaryType="nt:unstructured">
                            <one
                                jcr:primaryType="nt:unstructured"
                                text="1"
                                value="1"/>
                            <two
                                jcr:primaryType="nt:unstructured"
                                text="2"
                                value="2"
                                selected="{Boolean}true"/>
                            <three
                                jcr:primaryType="nt:unstructured"
                                text="3"
                                value="3"/>
                            <four
                                jcr:primaryType="nt:unstructured"
                                text="4"
                                value="4"/>
                            <five
                                jcr:primaryType="nt:unstructured"
                                text="5"
                                value="5"/>
                            <all
                                jcr:primaryType="nt:unstructured"
                                text="All"
                                value="99"/>
                        </items>
                    </number>
                    
                    <randomize
	                    jcr:primaryType="nt:unstructured"
	                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
	                    name="./randomize"
	                    text="Randomize"
                        fieldDescription="Refresh the page to see a random order displayed"          
	                    value="true"/>
                    
				</items>
			</column>
		</items>
	</content>
</jcr:root>